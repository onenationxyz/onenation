<div id="vision" class="grid-container" data-magellan-target="vision">
  <div class="grid-x grid-padding-x grid-margin-y align-center align-middle">
    
    <!-- HEART -->
    <div class="cell shrink ons-icon">
      <img src="{{root}}assets/img/onenation_heart.png" alt="Heart">
    </div>
    <div class="cell shrink ons-title ons-strong-green">
      <h3>{{#markdown}}{{translate "vision.heart.title"}}{{/markdown}}</h3>
    </div>
    <div class="cell medium-11 small-expanded ons-text ons-strong-green">
      <div class="">{{#markdown}}{{translate "vision.heart.text1"}}{{/markdown}}</div>
      <div class="text-right">{{#markdown}}{{translate "vision.heart.text2"}}{{/markdown}}</div>
      <div class="">{{#markdown}}{{translate "vision.heart.text3"}}{{/markdown}}</div>
      <div class="text-center">{{#markdown}}{{translate "vision.heart.text4"}}{{/markdown}}</div>
      
    </div>
    
    <!-- MIND -->
    <div class="cell shrink ons-icon">
      <img src="{{root}}assets/img/onenation_mind.png" alt="Mind">
    </div>
    <div class="cell shrink ons-title ons-strong-blue">
      <h3>{{#markdown}}{{translate "vision.mind.title"}}{{/markdown}}</h3>
    </div>
    <div class="cell medium-11 medium-down-expanded ons-text ons-strong-blue">
      {{#markdown}}{{translate "vision.mind.text"}}{{/markdown}}
    </div>
    
    <!-- BODY -->
    <div class="cell shrink ons-icon">
      <img src="{{root}}assets/img/onenation_body.png" alt="Body">
    </div>
    <div class="cell shrink ons-title ons-strong-red">
      <h3>{{#markdown}}{{translate "vision.body.title"}}{{/markdown}}</h3>
    </div>
    <div class="cell medium-11 medium-down-expanded ons-text ons-strong-red">
      {{#markdown}}{{translate "vision.body.text"}}{{/markdown}}
    </div>
    
  </div>
</div>